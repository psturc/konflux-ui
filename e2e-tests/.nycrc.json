{
  "extends": "@istanbuljs/nyc-config-typescript",
  "check-coverage": false,
  "all": true,
  "cwd": "./",
  "include": [
    "src/**/*.{js,ts,tsx}"
  ],
  "exclude": [
    "src/**/*.spec.{js,ts,tsx}",
    "src/**/*.test.{js,ts,tsx}",
    "src/**/__tests__/**",
    "src/**/__mocks__/**",
    "src/**/*.d.ts",
    "coverage/**",
    "e2e-tests/**"
  ],
  "reporter": [
    "html",
    "lcov",
    "text",
    "text-summary"
  ],
  "report-dir": "coverage",
  "temp-dir": ".nyc_output"
}
